<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="new-blog-post-section">
    <button type="submit" class="btn" id="create-new-blog-post">Create New Blog Post</button>
</div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Dashboard:</h3>
    <ul>
        {{#each blogs as |blog|}}
        <li>
            {{> blogPostInfo blog}}
        </li>
        <a href="/dashboard/edit/{{id}}">Edit</a>
        {{/each}}
    </ul>
  </div>
  {{/if}}
</div>

<script src="./js/navigateToCreate.js"></script>