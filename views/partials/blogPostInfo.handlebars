<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2 class="blog-id" data-id="{{id}}">
       <a href="/blog/{{id}}">{{post_name}}</a>
    </h2>

    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post_body}}
    </p>
  </div>
</div>
